{
  "builders": [{
    "type": "virtualbox-iso",
    "virtualbox_version_file": ".vbox_version",
    "headless": false,
    "vm_name": "packer-ubuntu-15.04-amd64",

    "guest_os_type": "Ubuntu_64",
    "disk_size": 40960,

    "iso_url": "http://releases.ubuntu.com/15.04/ubuntu-15.04-server-amd64.iso",
    "iso_checksum": "6501c8545374665823384bbb6235f865108f56d8a30bbf69dd18df73c14ccb84",
    "iso_checksum_type": "sha256",

    "boot_wait": "5s",
    "boot_command": [
      "<esc><esc><enter><wait>",
      "/install/vmlinuz ",
      "initrd=/install/initrd.gz ",
      "biosdevname=0 ",
      "auto-install/enable=true ",
      "hostname=valuationvision.dev ",
      "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
      "debconf/priority=critical ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/preseed.cfg ",
      "<enter>"
    ],

    "http_directory": "http",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": 22,
    "ssh_wait_timeout": "10000s",

    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ],

    "shutdown_command": "sudo poweroff"
  }],
  "post-processors": [{
    "output": "finn-ubuntu1504-amd64-vbox-r1.box",
    "compression_level": 6,
    "type": "vagrant"
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "etc/redis/redis.conf",
      "destination": "/tmp/redis.conf"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/vagrant.sh",
        "scripts/vboxguest.sh",
        "scripts/packages.sh",
        "scripts/compact.sh"
      ]
    }
  ]
}
